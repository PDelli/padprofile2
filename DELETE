  background-repeat: no-repeat;
}
#tempestade-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  overflow: hidden;
  z-index: 9999;
}

.particula-areia {
  position: absolute;
  background-color: #d2b48c; /* cor de areia */
  border-radius: 50%;
  opacity: 0.7;
  animation-name: cair-particula;
  animation-timing-function: linear;
}

@keyframes cair-particula {
  from {
    transform: translate(0, 50vw);
  }
  to {
    transform: translate(100vw, 0); /* cair e mover um pouco pra direita */
  }
}
.character{
    margin-left: 50vw;
    margin-top: 0vw;
    height: 600px;
    width: 450px;
    position: absolute;
    background-image: url(https://media.discordapp.net/attachments/175296135903051777/1392720382468816906/Leonardo_Anime_XL_Make_a_young_child_with_brown_skin_white_hai_3.png?ex=68708f6e&is=686f3dee&hm=16a137f599733696a6dfe32994396b8cf94e096647345327d776d6700897c1ec&=&format=webp&quality=lossless&width=638&height=960);
